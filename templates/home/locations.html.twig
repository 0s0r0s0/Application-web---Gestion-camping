    <h1>Liste des biens</h1>

    <table class="table">
        <thead>
        <tr>

            <th>Prix</th>
            <th>Titre</th>
            <th>Description</th>
            <th>Couchage</th>
            <th>Label</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for template in templates %}
            <tr>
                <td>{{ template.prix ~ 'â‚¬' }}</td>
                <td>{{ template.titre }}</td>
                <td>{{ template.description }}</td>
                <td>{{ template.couchage }}</td>
                <td>{{ template.label }}</td>
                <td>
                    <a href="{{ path('templates_show', {'id': template.id}) }}">Voir</a>
