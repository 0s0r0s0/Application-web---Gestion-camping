{% extends 'base.html.twig' %}

{% block title %}Reservations{% endblock %}

{% block body %}
    <h1>Reservations</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Date_start</th>
                <td>{{ reservation.dateStart ? reservation.dateStart|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_end</th>
                <td>{{ reservation.dateEnd ? reservation.dateEnd|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nb_adulte</th>
                <td>{{ reservation.nbAdulte }}</td>
            </tr>
            <tr>
                <th>Nb_enfant</th>
                <td>{{ reservation.nbEnfant }}</td>
            </tr>
            <tr>
                <th>Piscine</th>
                <td>{{ reservation.piscine ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('reservations_index') }}">back to list</a>

    <a href="{{ path('reservations_edit', {'id': reservation.id}) }}">edit</a>

    {{ include('reservations/_delete_form.html.twig') }}
{% endblock %}
